public/sw.js
public/workbox-*.js
public/manifest.json
public/icons/

# Temporary files
tmp/
temp/
*.tmp

# Husky git hooks
.husky/

# Editor config files
.editorconfig
.prettierrc
.prettierignore
.eslintrc.json
.eslintignore
.npmrc

# TypeScript config (will use production config)
tsconfig.node.json
