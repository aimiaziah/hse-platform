import React, { useState, useEffect } from 'react';
import EmployeeLayout from '@/roles/employee/layouts/EmployeeLayout';
import ProtectedRoute from '@/shared/components/ProtectedRoute';
import { storage } from '@/utils/storage';

interface MonthlyInspectionData {
  month: string;
  fireExtinguisher: number;
  firstAid: number;
  manhours: number;
  total: number;
}

interface MonthlyManhoursData {
  month: string;
  employees: number;
  manHours: number;
  accidents: number;
}

interface ExpiryItem {
  id: string;
  type: 'fire_extinguisher' | 'first_aid';
  itemName: string;
  location: string;
  expiryDate: string;
  daysUntilExpiry: number;
}

interface AnalyticsData {
  selectedYear: number;
  totalInspectionsYear: number;
  totalInspectorsCount: number;
  currentMonthInspected: boolean;
  monthlyData: MonthlyInspectionData[];
  expiryItems: ExpiryItem[];
  // Manhours statistics
  averageEmployees: number;
  totalCumulativeManHours: number;
  totalAccidents: number;
  monthlyManhoursData: MonthlyManhoursData[];
}

const AnalyticsDashboard: React.FC = () => {
  const currentYear = new Date().getFullYear();
  const [analyticsData, setAnalyticsData] = useState<AnalyticsData | null>(null);
  const [selectedYear, setSelectedYear] = useState<number>(currentYear);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    loadAnalyticsData();
  }, [selectedYear]);

  const loadAnalyticsData = () => {
    setLoading(true);

    try {
      const now = new Date();
      const currentMonth = now.getMonth();
      const currentYear = now.getFullYear();

      // Load all inspection data
      const fireInspections = storage.load('fire_extinguisher_inspections', []);
      const firstAidInspections = storage.load('first_aid_inspections', []);
      const manhoursReports = storage.load('manhours_reports', []);
      const users = storage.load('users', []);

      // Filter inspections by selected year
      const filterByYear = (inspections: any[]) => {
        return inspections.filter((inspection: any) => {
          const inspectionDate = new Date(inspection.createdAt);
          return inspectionDate.getFullYear() === selectedYear;
        });
      };

      const fireInspectionsYear = filterByYear(fireInspections);
      const firstAidInspectionsYear = filterByYear(firstAidInspections);
      const manhoursReportsYear = filterByYear(manhoursReports);

      // Calculate total inspections for the year
      const totalInspectionsYear =
        fireInspectionsYear.length + firstAidInspectionsYear.length + manhoursReportsYear.length;

      // Count inspectors (users with role 'inspector' or 'INSPECTOR')
      const inspectors = users.filter(
        (user: any) =>
          user.role?.toLowerCase() === 'inspector' || user.role?.toLowerCase() === 'employee',
      );
      const totalInspectorsCount = inspectors.length;

      // Check if current month has inspections (only if viewing current year)
      let currentMonthInspected = false;
      if (selectedYear === currentYear) {
        const currentMonthInspections = [
          ...fireInspections,
          ...firstAidInspections,
          ...manhoursReports,
        ].filter((inspection: any) => {
          const inspectionDate = new Date(inspection.createdAt);
          return (
            inspectionDate.getFullYear() === currentYear &&
            inspectionDate.getMonth() === currentMonth
          );
        });
        currentMonthInspected = currentMonthInspections.length > 0;
      }

      // Generate monthly data
      const monthlyData: MonthlyInspectionData[] = [];
      const monthNames = ['JAN', 'FEB', 'MAR', 'APR', 'MAY', 'JUN', 'JUL', 'AUG', 'SEP', 'OCT', 'NOV', 'DEC'];

      for (let month = 0; month < 12; month++) {
        const fireCount = fireInspectionsYear.filter((inspection: any) => {
          const inspectionDate = new Date(inspection.createdAt);
          return inspectionDate.getMonth() === month;
        }).length;

        const firstAidCount = firstAidInspectionsYear.filter((inspection: any) => {
          const inspectionDate = new Date(inspection.createdAt);
          return inspectionDate.getMonth() === month;
        }).length;

        const manhoursCount = manhoursReportsYear.filter((report: any) => {
          const reportDate = new Date(report.createdAt);
          return reportDate.getMonth() === month;
        }).length;

        monthlyData.push({
          month: monthNames[month],
          fireExtinguisher: fireCount,
          firstAid: firstAidCount,
          manhours: manhoursCount,
          total: fireCount + firstAidCount + manhoursCount,
        });
      }

      // Get expiry items (fire extinguisher and first aid items)
      const expiryItems: ExpiryItem[] = [];

      // Process fire extinguisher items
      fireInspections.forEach((inspection: any) => {
        inspection.items?.forEach((item: any) => {
          if (item.expiryDate) {
            const expiryDate = new Date(item.expiryDate);
            const daysUntilExpiry = Math.ceil(
              (expiryDate.getTime() - now.getTime()) / (1000 * 60 * 60 * 24),
            );

            // Only include items that haven't expired or will expire soon (within 90 days)
            if (daysUntilExpiry > -30) {
              expiryItems.push({
                id: `${inspection.id}-${item.id || item.itemNumber}`,
                type: 'fire_extinguisher',
                itemName: item.type || item.itemName || `Fire Extinguisher #${item.itemNumber}`,
                location: item.location || inspection.location || 'Unknown',
                expiryDate: item.expiryDate,
                daysUntilExpiry,
              });
            }
          }
        });
      });

      // Process first aid items
      firstAidInspections.forEach((inspection: any) => {
        inspection.items?.forEach((item: any) => {
          if (item.expiryDate) {
            const expiryDate = new Date(item.expiryDate);
            const daysUntilExpiry = Math.ceil(
              (expiryDate.getTime() - now.getTime()) / (1000 * 60 * 60 * 24),
            );

            // Only include items that haven't expired or will expire soon (within 90 days)
            if (daysUntilExpiry > -30) {
              expiryItems.push({
                id: `${inspection.id}-${item.id || item.itemName}`,
                type: 'first_aid',
                itemName: item.itemName || item.name || 'First Aid Item',
                location: item.location || inspection.location || 'Unknown',
                expiryDate: item.expiryDate,
                daysUntilExpiry,
              });
            }
          }
        });
      });

      // Sort expiry items by days until expiry
      expiryItems.sort((a, b) => a.daysUntilExpiry - b.daysUntilExpiry);

      // Calculate manhours statistics
      let totalEmployees = 0;
      let totalManHours = 0;
      let totalAccidents = 0;
      let employeeCount = 0;

      const monthlyManhoursData: MonthlyManhoursData[] = [];

      for (let month = 0; month < 12; month++) {
        const monthReports = manhoursReportsYear.filter((report: any) => {
          const reportDate = new Date(report.createdAt);
          return reportDate.getMonth() === month;
        });

        let monthEmployees = 0;
        let monthManHours = 0;
        let monthAccidents = 0;

        monthReports.forEach((report: any) => {
          const formData = report.form_data || report.formData || {};

          // Extract employees
          const employees = parseInt(formData.totalEmployees || formData.total_employees || '0');
          if (!isNaN(employees) && employees > 0) {
            monthEmployees += employees;
            totalEmployees += employees;
            employeeCount++;
          }

          // Extract man-hours
          const manHours = parseFloat(formData.totalManHours || formData.total_man_hours || formData.cumulativeManHours || '0');
          if (!isNaN(manHours)) {
            monthManHours += manHours;
            totalManHours += manHours;
          }

          // Extract accidents
          const accidents = parseInt(formData.totalAccidents || formData.total_accidents || formData.numberOfAccidents || '0');
          if (!isNaN(accidents)) {
            monthAccidents += accidents;
            totalAccidents += accidents;
          }
        });

        monthlyManhoursData.push({
          month: monthNames[month],
          employees: monthEmployees,
          manHours: monthManHours,
          accidents: monthAccidents,
        });
      }

      const averageEmployees = employeeCount > 0 ? Math.round(totalEmployees / employeeCount) : 0;

      setAnalyticsData({
        selectedYear,
        totalInspectionsYear,
        totalInspectorsCount,
        currentMonthInspected,
        monthlyData,
        expiryItems,
        averageEmployees,
        totalCumulativeManHours: totalManHours,
        totalAccidents,
        monthlyManhoursData,
      });
    } catch (error) {
      console.error('Error loading analytics data:', error);
    } finally {
      setLoading(false);
    }
  };

  const exportAnalytics = () => {
    if (!analyticsData) return;

    const reportData = {
      generatedAt: new Date().toISOString(),
      year: selectedYear,
      ...analyticsData,
    };

    const dataStr = JSON.stringify(reportData, null, 2);
    const dataUri = `data:application/json;charset=utf-8,${encodeURIComponent(dataStr)}`;

    const exportFileDefaultName = `analytics-report-${selectedYear}-${new Date().toISOString().split('T')[0]}.json`;

    const linkElement = document.createElement('a');
    linkElement.setAttribute('href', dataUri);
    linkElement.setAttribute('download', exportFileDefaultName);
    linkElement.click();
  };

  const availableYears = () => {
    const currentYear = new Date().getFullYear();
    return [currentYear - 2, currentYear - 1, currentYear];
  };

  if (loading) {
    return (
      <ProtectedRoute requiredPermission="canViewAnalytics">
        <EmployeeLayout title="Analytics Dashboard">
          <div className="flex items-center justify-center h-64">
            <div className="flex items-center space-x-2">
              <div className="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600" />
              <span className="text-gray-600">Loading analytics...</span>
            </div>
          </div>
        </EmployeeLayout>
      </ProtectedRoute>
    );
  }

  if (!analyticsData) {
    return (
      <ProtectedRoute requiredPermission="canViewAnalytics">
        <EmployeeLayout title="Analytics Dashboard">
          <div className="text-center py-12">
            <div className="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg
                className="w-8 h-8 text-gray-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  strokeLinecap="round"
                  strokeLinejoin="round"
                  strokeWidth={2}
                  d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
                />
              </svg>
            </div>
            <p className="text-gray-600">No inspection data available.</p>
          </div>
        </EmployeeLayout>
      </ProtectedRoute>
    );
  }

  return (
    <ProtectedRoute requiredPermission="canViewAnalytics">
      <EmployeeLayout title="Analytics Dashboard">
        <div className="max-w-7xl mx-auto space-y-8 pb-20">
          {/* Header with Year Selector */}
          <div className="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
            <div>
              <h1 className="text-4xl font-bold bg-gradient-to-r from-gray-900 to-gray-600 bg-clip-text text-transparent">
                Analytics Dashboard
              </h1>
              <p className="text-gray-500 mt-2 text-sm">
                Comprehensive inspection statistics and safety metrics
              </p>
            </div>
            <div className="flex flex-col sm:flex-row gap-3">
              <button
                onClick={exportAnalytics}
                className="px-5 py-2.5 bg-gradient-to-r from-[#1E355E] to-[#2a4a7c] text-white rounded-xl hover:shadow-lg hover:scale-105 transition-all duration-200 text-sm font-semibold flex items-center gap-2"
              >
                <svg
                  className="w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    strokeLinecap="round"
                    strokeLinejoin="round"
                    strokeWidth={2}
                    d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                  />
                </svg>
                Export Report
              </button>
            </div>
          </div>

          {/* Year Selector */}
          <div className="bg-gradient-to-br from-amber-50 to-yellow-50 rounded-2xl p-6 shadow-sm border border-amber-100">
            <div className="text-center">
              <p className="text-sm font-semibold text-amber-900 mb-4 uppercase tracking-wider">
                Select Year
              </p>
              <div className="flex justify-center gap-3">
                {availableYears().map((year) => (
                  <button
                    key={year}
                    onClick={() => setSelectedYear(year)}
                    className={`px-8 py-3 rounded-xl font-semibold transition-all duration-200 ${
                      selectedYear === year
                        ? 'bg-gradient-to-r from-gray-900 to-gray-700 text-white shadow-lg scale-105'
                        : 'bg-white text-gray-700 hover:bg-gray-50 hover:shadow-md hover:scale-102 border border-gray-200'
                    }`}
                  >
                    {year}
                  </button>
                ))}
              </div>
            </div>
          </div>

          {/* Key Metrics */}
          <div className="grid grid-cols-1 sm:grid-cols-3 gap-6">
            {/* Total Inspections per Year */}
            <div className="group relative bg-gradient-to-br from-blue-50 via-white to-blue-50 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 p-8 border border-blue-100 overflow-hidden">
              <div className="absolute top-0 right-0 w-32 h-32 bg-blue-100 rounded-full -mr-16 -mt-16 opacity-20 group-hover:scale-150 transition-transform duration-500"></div>
              <div className="relative">
                <div className="flex items-center justify-between mb-4">
                  <div className="p-3 bg-blue-100 rounded-xl">
                    <svg className="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                    </svg>
                  </div>
                </div>
                <p className="text-xs font-semibold text-blue-600 mb-2 uppercase tracking-wider">
                  Total Inspections ({selectedYear})
                </p>
                <p className="text-4xl font-bold text-gray-900 mb-1">
                  {analyticsData.totalInspectionsYear.toLocaleString()}
                </p>
                <p className="text-xs text-gray-500">All inspection types</p>
              </div>
            </div>

            {/* Total Inspectors */}
            <div className="group relative bg-gradient-to-br from-purple-50 via-white to-purple-50 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 p-8 border border-purple-100 overflow-hidden">
              <div className="absolute top-0 right-0 w-32 h-32 bg-purple-100 rounded-full -mr-16 -mt-16 opacity-20 group-hover:scale-150 transition-transform duration-500"></div>
              <div className="relative">
                <div className="flex items-center justify-between mb-4">
                  <div className="p-3 bg-purple-100 rounded-xl">
                    <svg className="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                  </div>
                </div>
                <p className="text-xs font-semibold text-purple-600 mb-2 uppercase tracking-wider">
                  Total Inspectors
                </p>
                <p className="text-4xl font-bold text-gray-900 mb-1">
                  {analyticsData.totalInspectorsCount}
                </p>
                <p className="text-xs text-gray-500">Active users</p>
              </div>
            </div>

            {/* Current Month Status */}
            <div className={`group relative ${analyticsData.currentMonthInspected ? 'bg-gradient-to-br from-green-50 via-white to-green-50 border-green-100' : 'bg-gradient-to-br from-red-50 via-white to-red-50 border-red-100'} rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 p-8 border overflow-hidden`}>
              <div className={`absolute top-0 right-0 w-32 h-32 ${analyticsData.currentMonthInspected ? 'bg-green-100' : 'bg-red-100'} rounded-full -mr-16 -mt-16 opacity-20 group-hover:scale-150 transition-transform duration-500`}></div>
              <div className="relative">
                <div className="flex items-center justify-between mb-4">
                  <div className={`p-3 ${analyticsData.currentMonthInspected ? 'bg-green-100' : 'bg-red-100'} rounded-xl`}>
                    {analyticsData.currentMonthInspected ? (
                      <svg className="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    ) : (
                      <svg className="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    )}
                  </div>
                </div>
                <p className={`text-xs font-semibold ${analyticsData.currentMonthInspected ? 'text-green-600' : 'text-red-600'} mb-2 uppercase tracking-wider`}>
                  Current Month Status
                </p>
                <p className={`text-4xl font-bold mb-1 ${analyticsData.currentMonthInspected ? 'text-green-600' : 'text-red-600'}`}>
                  {analyticsData.currentMonthInspected ? 'YES' : 'NO'}
                </p>
                <p className="text-xs text-gray-500">
                  {analyticsData.currentMonthInspected ? 'Inspections completed' : 'No inspections yet'}
                </p>
              </div>
            </div>
          </div>

          {/* Divider */}
          <div className="relative my-12">
            <div className="absolute inset-0 flex items-center">
              <div className="w-full border-t-2 border-gradient-to-r from-transparent via-gray-200 to-transparent"></div>
            </div>
          </div>

          {/* HSE Statistics & Manhours Section Header */}
          <div className="text-center mb-8">
            <div className="inline-flex items-center gap-3 px-6 py-3 bg-gradient-to-r from-amber-100 to-yellow-100 rounded-full mb-3">
              <svg className="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
              <span className="text-sm font-bold text-amber-900 uppercase tracking-wide">HSE Statistics & Manhours</span>
            </div>
            <h2 className="text-3xl font-bold bg-gradient-to-r from-amber-600 to-yellow-600 bg-clip-text text-transparent">
              Employee Safety Metrics
            </h2>
            <p className="text-gray-500 mt-2 text-sm">Workforce and safety data for {selectedYear}</p>
          </div>

          {/* Manhours Key Metrics */}
          <div className="grid grid-cols-1 sm:grid-cols-3 gap-6">
            {/* Average Employees */}
            <div className="group relative bg-gradient-to-br from-indigo-50 via-white to-indigo-50 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 p-8 border border-indigo-100 overflow-hidden">
              <div className="absolute top-0 right-0 w-32 h-32 bg-indigo-100 rounded-full -mr-16 -mt-16 opacity-20 group-hover:scale-150 transition-transform duration-500"></div>
              <div className="relative">
                <div className="flex items-center justify-between mb-4">
                  <div className="p-3 bg-indigo-100 rounded-xl">
                    <svg className="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                  </div>
                </div>
                <p className="text-xs font-semibold text-indigo-600 mb-2 uppercase tracking-wider">
                  Average Employees
                </p>
                <p className="text-4xl font-bold text-gray-900 mb-1">
                  {analyticsData.averageEmployees.toLocaleString()}
                </p>
                <p className="text-xs text-gray-500">Per reporting period</p>
              </div>
            </div>

            {/* Total Cumulative Man-Hours */}
            <div className="group relative bg-gradient-to-br from-teal-50 via-white to-teal-50 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 p-8 border border-teal-100 overflow-hidden">
              <div className="absolute top-0 right-0 w-32 h-32 bg-teal-100 rounded-full -mr-16 -mt-16 opacity-20 group-hover:scale-150 transition-transform duration-500"></div>
              <div className="relative">
                <div className="flex items-center justify-between mb-4">
                  <div className="p-3 bg-teal-100 rounded-xl">
                    <svg className="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                </div>
                <p className="text-xs font-semibold text-teal-600 mb-2 uppercase tracking-wider">
                  Total Man-Hours Worked
                </p>
                <p className="text-4xl font-bold text-gray-900 mb-1">
                  {analyticsData.totalCumulativeManHours.toLocaleString()}
                </p>
                <p className="text-xs text-gray-500">Cumulative hours</p>
              </div>
            </div>

            {/* Total Accidents */}
            <div className="group relative bg-gradient-to-br from-rose-50 via-white to-rose-50 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 p-8 border border-rose-100 overflow-hidden">
              <div className="absolute top-0 right-0 w-32 h-32 bg-rose-100 rounded-full -mr-16 -mt-16 opacity-20 group-hover:scale-150 transition-transform duration-500"></div>
              <div className="relative">
                <div className="flex items-center justify-between mb-4">
                  <div className="p-3 bg-rose-100 rounded-xl">
                    <svg className="w-6 h-6 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                  </div>
                </div>
                <p className="text-xs font-semibold text-rose-600 mb-2 uppercase tracking-wider">
                  Total Accidents
                </p>
                <p className="text-4xl font-bold text-gray-900 mb-1">
                  {analyticsData.totalAccidents.toLocaleString()}
                </p>
                <p className="text-xs text-gray-500">Safety incidents</p>
              </div>
            </div>
          </div>

          {/* Monthly Manhours Charts */}
          <div className="grid grid-cols-1 lg:grid-cols-3 gap-6 mt-8">
            {/* Total Employees by Month */}
            <div className="bg-white rounded-xl border border-gray-200 p-6">
              <h3 className="text-sm font-semibold text-gray-700 mb-6">
                Total Employees by Month
              </h3>
              <div className="h-52 flex items-end justify-between gap-2">
                {analyticsData.monthlyManhoursData.map((data, index) => {
                  const maxValue = Math.max(
                    ...analyticsData.monthlyManhoursData.map((d) => d.employees),
                    1,
                  );
                  const heightPercent = (data.employees / maxValue) * 100;

                  return (
                    <div key={index} className="flex-1 flex flex-col items-center group">
                      <div className="relative w-full flex flex-col items-center justify-end" style={{ height: '180px' }}>
                        <div className="relative">
                          <div
                            className="bg-[#A8D5BA] rounded-t-md w-full transition-all hover:opacity-80"
                            style={{
                              height: `${Math.max(heightPercent * 1.6, 4)}px`,
                              width: '20px',
                              minHeight: data.employees > 0 ? '8px' : '4px',
                            }}
                          >
                            <div className="absolute -top-8 left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-[10px] py-1 px-2 rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap z-10">
                              {data.employees}
                            </div>
                          </div>
                        </div>
                      </div>
                      <span className="text-[10px] text-gray-500 mt-2 font-medium">{data.month}</span>
                    </div>
                  );
                })}
              </div>
            </div>

            {/* Total Man-Hours by Month */}
            <div className="bg-white rounded-xl border border-gray-200 p-6">
              <h3 className="text-sm font-semibold text-gray-700 mb-6">
                Total Man-hours Work by Month
              </h3>
              <div className="h-52 flex items-end justify-between gap-2">
                {analyticsData.monthlyManhoursData.map((data, index) => {
                  const maxValue = Math.max(
                    ...analyticsData.monthlyManhoursData.map((d) => d.manHours),
                    1,
                  );
                  const heightPercent = (data.manHours / maxValue) * 100;

                  return (
                    <div key={index} className="flex-1 flex flex-col items-center group">
                      <div className="relative w-full flex flex-col items-center justify-end" style={{ height: '180px' }}>
                        <div className="relative">
                          <div
                            className="bg-[#9DB4C0] rounded-t-md w-full transition-all hover:opacity-80"
                            style={{
                              height: `${Math.max(heightPercent * 1.6, 4)}px`,
                              width: '20px',
                              minHeight: data.manHours > 0 ? '8px' : '4px',
                            }}
                          >
                            <div className="absolute -top-8 left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-[10px] py-1 px-2 rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap z-10">
                              {data.manHours.toLocaleString()}
                            </div>
                          </div>
                        </div>
                      </div>
                      <span className="text-[10px] text-gray-500 mt-2 font-medium">{data.month}</span>
                    </div>
                  );
                })}
              </div>
            </div>

            {/* Total Accidents by Month */}
            <div className="bg-white rounded-xl border border-gray-200 p-6">
              <h3 className="text-sm font-semibold text-gray-700 mb-6">
                Number of Accidents by Month
              </h3>
              <div className="h-52 flex items-end justify-between gap-2">
                {analyticsData.monthlyManhoursData.map((data, index) => {
                  const maxValue = Math.max(
                    ...analyticsData.monthlyManhoursData.map((d) => d.accidents),
                    1,
                  );
                  const heightPercent = (data.accidents / maxValue) * 100;

                  return (
                    <div key={index} className="flex-1 flex flex-col items-center group">
                      <div className="relative w-full flex flex-col items-center justify-end" style={{ height: '180px' }}>
                        <div className="relative">
                          <div
                            className="bg-[#E8A5A5] rounded-t-md w-full transition-all hover:opacity-80"
                            style={{
                              height: `${Math.max(heightPercent * 1.6, 4)}px`,
                              width: '20px',
                              minHeight: data.accidents > 0 ? '8px' : '4px',
                            }}
                          >
                            <div className="absolute -top-8 left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-[10px] py-1 px-2 rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap z-10">
                              {data.accidents}
                            </div>
                          </div>
                        </div>
                      </div>
                      <span className="text-[10px] text-gray-500 mt-2 font-medium">{data.month}</span>
                    </div>
                  );
                })}
              </div>
            </div>
          </div>

          {/* Divider */}
          <div className="relative my-12">
            <div className="absolute inset-0 flex items-center">
              <div className="w-full border-t-2 border-gradient-to-r from-transparent via-gray-200 to-transparent"></div>
            </div>
          </div>

          {/* Inspection Section Header */}
          <div className="text-center mb-8">
            <div className="inline-flex items-center gap-3 px-6 py-3 bg-gradient-to-r from-blue-100 to-cyan-100 rounded-full mb-3">
              <svg className="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              <span className="text-sm font-bold text-blue-900 uppercase tracking-wide">Inspection Statistics</span>
            </div>
            <h2 className="text-3xl font-bold bg-gradient-to-r from-blue-600 to-cyan-600 bg-clip-text text-transparent">
              Monthly Inspection Tracking
            </h2>
            <p className="text-gray-500 mt-2 text-sm">Fire extinguisher and first aid inspections</p>
          </div>

          {/* Monthly Inspection Charts */}
          <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">
            {/* Total Inspections per Month */}
            <div className="bg-white rounded-xl border border-gray-200 p-6">
              <h3 className="text-sm font-semibold text-gray-700 mb-6">
                Total Inspections by Month
              </h3>
              <div className="h-52 flex items-end justify-between gap-2">
                {analyticsData.monthlyData.map((data, index) => {
                  const maxValue = Math.max(
                    ...analyticsData.monthlyData.map((d) => d.total),
                    1,
                  );
                  const heightPercent = (data.total / maxValue) * 100;

                  return (
                    <div key={index} className="flex-1 flex flex-col items-center group">
                      <div className="relative w-full flex flex-col items-center justify-end" style={{ height: '180px' }}>
                        <div className="relative">
                          <div
                            className="bg-[#A8D5BA] rounded-t-md w-full transition-all hover:opacity-80"
                            style={{
                              height: `${Math.max(heightPercent * 1.6, 4)}px`,
                              width: '20px',
                              minHeight: data.total > 0 ? '8px' : '4px',
                            }}
                          >
                            <div className="absolute -top-8 left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-[10px] py-1 px-2 rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap z-10">
                              {data.total}
                            </div>
                          </div>
                        </div>
                      </div>
                      <span className="text-[10px] text-gray-500 mt-2 font-medium">{data.month}</span>
                    </div>
                  );
                })}
              </div>
            </div>

            {/* Fire Extinguisher Inspections */}
            <div className="bg-white rounded-xl border border-gray-200 p-6">
              <h3 className="text-sm font-semibold text-gray-700 mb-6">
                Fire Extinguisher Inspections
              </h3>
              <div className="h-52 flex items-end justify-between gap-2">
                {analyticsData.monthlyData.map((data, index) => {
                  const maxValue = Math.max(
                    ...analyticsData.monthlyData.map((d) => d.fireExtinguisher),
                    1,
                  );
                  const heightPercent = (data.fireExtinguisher / maxValue) * 100;

                  return (
                    <div key={index} className="flex-1 flex flex-col items-center group">
                      <div className="relative w-full flex flex-col items-center justify-end" style={{ height: '180px' }}>
                        <div className="relative">
                          <div
                            className="bg-[#7EC8E3] rounded-t-md w-full transition-all hover:opacity-80"
                            style={{
                              height: `${Math.max(heightPercent * 1.6, 4)}px`,
                              width: '20px',
                              minHeight: data.fireExtinguisher > 0 ? '8px' : '4px',
                            }}
                          >
                            <div className="absolute -top-8 left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-[10px] py-1 px-2 rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap z-10">
                              {data.fireExtinguisher}
                            </div>
                          </div>
                        </div>
                      </div>
                      <span className="text-[10px] text-gray-500 mt-2 font-medium">{data.month}</span>
                    </div>
                  );
                })}
              </div>
            </div>

            {/* First Aid Inspections */}
            <div className="bg-white rounded-xl border border-gray-200 p-6">
              <h3 className="text-sm font-semibold text-gray-700 mb-6">
                First Aid Inspections
              </h3>
              <div className="h-52 flex items-end justify-between gap-2">
                {analyticsData.monthlyData.map((data, index) => {
                  const maxValue = Math.max(
                    ...analyticsData.monthlyData.map((d) => d.firstAid),
                    1,
                  );
                  const heightPercent = (data.firstAid / maxValue) * 100;

                  return (
                    <div key={index} className="flex-1 flex flex-col items-center group">
                      <div className="relative w-full flex flex-col items-center justify-end" style={{ height: '180px' }}>
                        <div className="relative">
                          <div
                            className="bg-[#F9C74F] rounded-t-md w-full transition-all hover:opacity-80"
                            style={{
                              height: `${Math.max(heightPercent * 1.6, 4)}px`,
                              width: '20px',
                              minHeight: data.firstAid > 0 ? '8px' : '4px',
                            }}
                          >
                            <div className="absolute -top-8 left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-[10px] py-1 px-2 rounded opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap z-10">
                              {data.firstAid}
                            </div>
                          </div>
                        </div>
                      </div>
                      <span className="text-[10px] text-gray-500 mt-2 font-medium">{data.month}</span>
                    </div>
                  );
                })}
              </div>
            </div>
          </div>

          {/* Expiry Dates Section */}
          <div className="mt-8 bg-white rounded-2xl shadow-lg border border-gray-100 p-8">
            <div className="flex items-center gap-3 mb-6">
              <div className="p-3 bg-amber-100 rounded-xl">
                <svg className="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 className="text-xl font-bold text-gray-900">
                  Expiry Date Tracking
                </h3>
                <p className="text-sm text-gray-500">Monitor fire extinguisher & first aid item expiration</p>
              </div>
            </div>
            {analyticsData.expiryItems.length > 0 ? (
              <div className="overflow-x-auto rounded-xl border border-gray-200">
                <table className="min-w-full">
                  <thead className="bg-gradient-to-r from-gray-50 to-gray-100">
                    <tr className="border-b border-gray-200">
                      <th className="text-left py-4 px-6 text-xs font-bold text-gray-700 uppercase tracking-wider">
                        Type
                      </th>
                      <th className="text-left py-4 px-6 text-xs font-bold text-gray-700 uppercase tracking-wider">
                        Item Name
                      </th>
                      <th className="text-left py-4 px-6 text-xs font-bold text-gray-700 uppercase tracking-wider">
                        Location
                      </th>
                      <th className="text-left py-4 px-6 text-xs font-bold text-gray-700 uppercase tracking-wider">
                        Expiry Date
                      </th>
                      <th className="text-left py-4 px-6 text-xs font-bold text-gray-700 uppercase tracking-wider">
                        Status
                      </th>
                    </tr>
                  </thead>
                  <tbody className="divide-y divide-gray-100 bg-white">
                    {analyticsData.expiryItems.slice(0, 50).map((item) => {
                      let statusColor = 'text-green-600';
                      let statusText = `${item.daysUntilExpiry} days`;

                      if (item.daysUntilExpiry < 0) {
                        statusColor = 'text-red-600 font-bold';
                        statusText = `EXPIRED ${Math.abs(item.daysUntilExpiry)} days ago`;
                      } else if (item.daysUntilExpiry === 0) {
                        statusColor = 'text-red-600 font-bold';
                        statusText = 'EXPIRES TODAY';
                      } else if (item.daysUntilExpiry <= 7) {
                        statusColor = 'text-red-600 font-semibold';
                        statusText = `${item.daysUntilExpiry} days`;
                      } else if (item.daysUntilExpiry <= 30) {
                        statusColor = 'text-amber-600 font-semibold';
                        statusText = `${item.daysUntilExpiry} days`;
                      }

                      return (
                        <tr key={item.id} className="hover:bg-blue-50/30 transition-colors">
                          <td className="py-4 px-6">
                            <span
                              className={`inline-flex items-center px-3 py-1.5 rounded-full text-xs font-semibold ${
                                item.type === 'fire_extinguisher'
                                  ? 'bg-gradient-to-r from-orange-100 to-orange-200 text-orange-700'
                                  : 'bg-gradient-to-r from-pink-100 to-pink-200 text-pink-700'
                              }`}
                            >
                              {item.type === 'fire_extinguisher'
                                ? 'Fire Extinguisher'
                                : 'First Aid'}
                            </span>
                          </td>
                          <td className="py-4 px-6 text-sm font-medium text-gray-900">{item.itemName}</td>
                          <td className="py-4 px-6 text-sm text-gray-600">{item.location}</td>
                          <td className="py-4 px-6 text-sm text-gray-700 font-medium">
                            {new Date(item.expiryDate).toLocaleDateString()}
                          </td>
                          <td className={`py-4 px-6 text-sm font-semibold ${statusColor}`}>{statusText}</td>
                        </tr>
                      );
                    })}
                  </tbody>
                </table>
                {analyticsData.expiryItems.length > 50 && (
                  <div className="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-4 border-t border-gray-200 rounded-b-xl">
                    <p className="text-sm text-gray-600 text-center font-medium">
                      Showing 50 of {analyticsData.expiryItems.length} items
                    </p>
                  </div>
                )}
              </div>
            ) : (
              <div className="text-center py-12">
                <div className="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg className="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                  </svg>
                </div>
                <p className="text-gray-500 font-medium">No expiry data available</p>
                <p className="text-sm text-gray-400 mt-1">Items will appear here when expiry dates are set</p>
              </div>
            )}
          </div>
        </div>
      </EmployeeLayout>
    </ProtectedRoute>
  );
};

export default AnalyticsDashboard;
